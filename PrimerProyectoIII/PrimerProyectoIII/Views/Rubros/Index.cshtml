@model IEnumerable<PrimerProyectoIII.Models.Rubro>

@{
    ViewData["Title"] = "Index";
}

<h1>Vista de Rubros</h1>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="AbrirModal()">
    Crear nuevo Rubro
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbody-rubros">
    </tbody>
</table> 





<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="TituloModalRubro">Crear Rubro</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="VaciarFormulario()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body img-fondo">
                <form>
                    <!--Se agrega el siguiente imput, para editar registros, "modificar"-->
                    <input type="hidden" id="RubroID" value="0" /> <!--type hidden: oculto,  tipe: text  -->
                    <div class="form-group">
                        <label for="exampleInputEmail1">Descripción :</label>
                        <input type="text" class="form-control" required id="TipoDeRubro" autocomplete="off" placeholder="Ingrese Nuevo Rubro">
                        <span id="ErrorRubroNombre"></span>
                        <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="VaciarFormulario()" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarRubro()" >Guardar Rubro</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
        {
    <script src="~/js/Rubro.js"></script>
    <script>
        window.onload = CompletarTablaRubros();
    </script>
}
