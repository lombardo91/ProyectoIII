@model IEnumerable<PrimerProyectoIII.Models.Subrubro>   

@{
    ViewData["Title"] = "Index";
}

<h1>Sub Rubros</h1>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="AbrirModal()">
    Crear nuevo Sub Rubro
</button>
<table class="table">
    <thead>
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>*@
            <th>Descripción</th>
            <th>Rubro</th>
            <th class="text-center">Opciones</th>
        </tr>
    </thead>
    <tbody id="tbody-subrubros">
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="TituloModalSubrubro">Crear Sub Rubro</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="VaciarFormulario()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <!--Se agrega el siguiente imput, para editar registros, "modificar"-->
                    <input type="text" id="SubrubroID" value="0" /> <!--type hidden: oculto,  tipe: text  -->
                    <div class="form-group">
                        <label>Descripción :</label>
                        <input type="text" class="form-control" required id="TipoDeSubrubro" autocomplete="off" placeholder="Ingrese Nuevo Sub Rubro">
                        <span id="ErrorSubrubroNombre"></span>
                        <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                    </div>
                    <!--Agregue que se vea el Rubro-->
                    <div class="form-group">
                        <label class="" id="">Rubro</label>
                        @Html.DropDownList("RubroID", null, htmlAttributes: new { @clas = "from-control" })
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="VaciarFormulario()" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarSubrubro()">Guardar Sub Rubro</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
        {
    <script src="~/js/Subrubro.js"></script>
    <script>
        window.onload = CompletarTablaSubrubros();
    </script>
}
